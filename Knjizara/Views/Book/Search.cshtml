@using Knjizara.ViewModels
@model ZanrKnjigaViewModels
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/KnjizaraLayout.cshtml";
}

<div>
    <form method="post" action="/Book/Search" class="unosForma">
        <p>Pretrazi  listu knjiga po zanru: </p>

        <select name="SelectedGenreId">
            @foreach (var g in Model.Zanrovi)
            {
                if (g.Deleted == false)
                {
                    <option value="@g.Id">@g.Name</option>
                }
            }
        </select>

        <input type="submit" name="Add" value="Search" />
    </form>
</div>
